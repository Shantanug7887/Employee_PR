@model EmployeeVM

<h2>Delete Employee</h2>

<div>
    <h4> Are you sure you want to delete this?</h4>
    <hr/>
<dl class="row"
   <dt class="col-sm-2"> Employee Id</dt>
   <dd class="col-sm-10">@Model.Id</dd>

   <dt class="col-sm-2"> Full Name</dt>
   <dd class="col-sm-10">@Model.FullName</dd>

   <dt class="col-sm-2"> Email</dt>
   <dd class="col-sm-10">@Model.Email</dd>

   <dt class="col-sm-2"> Join Date</dt>
   <dd class="col-sm-10">@Model.JoinDate.ToShortTimeString()</dd>

   <dt class="col-sm-2"> Department Id</dt>
   <dd class="col-sm-10">@Model.DepartmentId</dd>
   </dl>

    <div class="mt-3">
        <form asp-for="Delete">
        <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>

    </div>
</div>


   
       

