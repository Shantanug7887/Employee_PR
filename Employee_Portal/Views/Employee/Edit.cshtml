@model EmployeeVM

<h2>Edit Employee</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mt-3">
        <label asp-for="Id" ></label>
        <input asp-for="Id" class="form-control" readonly/>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" readonly />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>




    <div class="mt-3">
        <label asp-for="Email" ></label>
        <input asp-for="Email" class="form-control" />
        
    </div>

    <div class="mt-3">
        <label asp-for="JoinDate" ></label>
        <input asp-for="JoinDate" type="date" class="form-control"/>
              
        <span asp-validation-for="JoinDate" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="from-label">"Department></label>
        <select asp-for="@Model.DepartmentView.SelectedDptID" 
                asp-items="@(new SelectList(Model.DepartmentView.DptName, "Id", "Name"))" class="form-control">
               
            <option value="">--Select Department--</option>
        </select>
        

    <div class="mt-3">
        <button type="submit" class="btn btn-outline-primary btn-sm">Save</button>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Cancel</a>
    </div>
</form>
