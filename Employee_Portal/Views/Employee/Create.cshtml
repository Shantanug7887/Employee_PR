@model EmployeeVM

<h2>Create Employee</h2>

<form asp-action="Create" method="post">
    <div class="mt-3">
        <label asp-for="FullName" class="form-label">Name</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="JoinDate" class="form-label">Join Date</label>
        <input asp-for="JoinDate" type="date" class="form-control"
               value="@Model.JoinDate.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="JoinDate" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label asp-for="DepartmentView.SelectedDptID" class="form-label">Department</label>
        <select asp-for="DepartmentView.SelectedDptID"
                asp-items="@(new SelectList(Model.DepartmentView.DptName, "Id", "Name"))"
                class="form-control">
            <option value="">--Select Department--</option>
        </select>
        <span asp-validation-for="DepartmentView.SelectedDptID" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-outline-primary btn-sm">Create</button>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Cancel</a>
    </div>
</form>
